<Page x:Class="PhoneBook2.AddContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneBook2"
        mc:Ignorable="d"
        Title="Add Contact" Height="150" Width="230" Background="#ff17212b">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Label Content="Number" Name="NumberLabel"  Foreground="White" Grid.Row="2" HorizontalAlignment="Left" Margin="2"/>
        <TextBox x:Name="NumberTextBox" Grid.Row="2"  Background="#ff355b89" Foreground="White" Height="23" Margin="60,1,50,1"/>

        <Button Content="Canlcel" Grid.Row="4" Foreground="White" Height="20" Width="63" FontSize="9" HorizontalAlignment="Right" Name="CancelButton" Click="CancelButton_Click"
                 Margin="0,15,21,-5"/>
        <Button Content="Save" Grid.Row="4" Foreground="White" Height="20" Width="50" FontSize="9" HorizontalAlignment="Left" Name="AddButton" Click="AddButton_Click"
                Margin="19,15,0,-5"/>
    </Grid>

</Page>
